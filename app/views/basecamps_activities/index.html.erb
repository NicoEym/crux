<div class="container">
  <div class="row">

  <% @basecamps_activity.itineraries.each do |itinerary| %>

    <div class="col s12 m4">
      <div class="card small">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="<%= itinerary.picture_url %>">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= itinerary.name %><i class="material-icons right">more_vert</i></span>
          <p><%= itinerary.elevation_max %></p>
          <p>| <%= itinerary.difficulty %> | - | <%= itinerary.orientations %> | - | <%= itinerary.equipment_rating %> |</p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= itinerary.name %><i class="material-icons right">close</i></span>
          <p><%= itinerary.content %></p>
        </div>
      </div>
    </div>

    <div class="col s12 m6">
      <h2 class="header"><%= @basecamps_activities.basecamp.name %></h2>
      <div class="card horizontal small">
        <div class="card-image">
          <img src="https://images.unsplash.com/photo-1483482699581-077cbc1b4c9f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1552&q=80">
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <h4>Cascade de glace</h4>
            <br>
            <p><strong>14</strong> itinéraires</p>
            <br>
            <p><i class="fas fa-car"></i> 1h30</p>
            <br>
            <p><i class="fas fa-exclamation-triangle"></i> Risque 3</p>
            <br>
            <p><i class="fas fa-cloud-sun"></i> Beau temps, 3°C</p>
          </div>
          <div class="card-action">
            <div class="left-align">
              <%= link_to "En savoir plus", root_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end  %>


  </div>
</div>
