<div class="container">

  <h1><%= @basecamp.name %> - <%= @activity.name %></h1>
  <div class="row">


    <div class="col s12">
      <ul class="tabs tabs-fixed-width">
        <li class="tab col s1"><a class="active" href="#itineraries">Itinéraires</a></li>
        <li class="tab col s1"><a class="" href="#weather">Météo</a></li>
        <li class="tab col s1"><a class="" href="#avalanche">Avalanche</a></li>
      </ul>
      <div id="weather"></div>
      <div id="avalanche"></div>
      <div id="itineraries">
        <% @itineraries.each do |itinerary| %>
        <div class="col s12 m4">
          <div class="card small">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="https://images.unsplash.com/photo-1516535852376-683407a5cb11?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%=itinerary.name%> <i class="material-icons right">more_vert</i></span>
              <p>Eperon Frendo, <%= itinerary.elevation_max %> (+ <%= itinerary.height_diff_up %>)</p>
              <p>| AD | - | P3 | - | S |</p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%=itinerary.name %><i class="material-icons right">close</i></span>
              <p><%=itinerary.content %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
