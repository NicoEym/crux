<div class="container">
  <p class="ellipsis center-align strong" style="margin-bottom: -8px"><%= link_to "", trip_basecamps_activities_path(@trip, @basecamp_activity), class: "fas fa-chevron-circle-left" %></i><span style="padding-left: 10px;"><%= @activity.name.capitalize.split(" ")[0] %> à <%= @basecamp.name.encode("iso-8859-1").force_encoding("utf-8") %></span></p>

  <% if @trip.validated == false %>
  <div class="fixed-action-btn card-panel sticky-cta hide", id="validation-basecamp-button">
    <%= link_to "Valider ce camp", trip_basecamps_activity_path(@trip, @basecamp_activity), method: :put, class: 'btn' %>
  </div>
  <% else %>
  <div class="fixed-action-btn card-panel sticky-cta">
    <%= link_to "Ajouter des itinéraires", trip_basecamps_activity_path(@trip, @basecamp_activity), method: :put, class: 'btn' %>
  </div>
  <% end %>

  <div class="row">
    <div class="col s12">
      <ul class="tabs tabs-fixed-width">
        <li class="tab col s1"><a class="active" href="#itineraries">Itinéraires</a></li>
        <li class="tab col s1"><a class="" href="#weather">Météo</a></li>
        <% if @mountain_range %>
        <li class="tab col s1"><a class="" href="#avalanche">Avalanche</a></li>
        <li class="tab col s1"><a class="" href="#map-ba">Carte</a></li>
        <% end %>
      </ul>

      <div id="itineraries" style="margin-top: 5px;">
        <div class="slide-container">

          <% @itineraries.each do |itinerary| %>
          <% next if itinerary.name.nil? %>
          <%= render partial: "card_itinerary", locals: {itinerary: itinerary, favorite: @favorite_itinerary, trip: @trip} %>
          <% end %>

        </div>
      </div>
      <div id="weather">
        <div class="row">
          <%= render partial: "weather_infos", locals: {basecamp: @basecamp} %>
        </div>
      </div>
      <% if @mountain_range %>
      <div id="avalanche">
        <div class="row">
          <%= render partial: "avalanche_infos", locals: {mountain_range: @mountain_range} %>
        </div>
      </div>
      <% end %>
      <div id="map-ba">
        <div class="slide-container" id="content-map">
          <%= render partial: "mapbox" %>
        </div>
      </div>
    </div>
  </div>
</div>
