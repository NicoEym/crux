<div class="container">

  <h1><%= @basecamp.name.encode("iso-8859-1").force_encoding("utf-8") %> - <%= @activity.name %></h1>
  <div class="row">
    <div class="col s12">
      <ul class="tabs tabs-fixed-width">
        <li class="tab col s1"><a class="active" href="#itineraries">Itinéraires</a></li>
        <li class="tab col s1"><a class="" href="#weather">Météo</a></li>
        <% if @mountain_range %>
          <li class="tab col s1"><a class="" href="#avalanche">Avalanche</a></li>
        <% end %>
      </ul>
      <div id="weather"></div>
      <% if @mountain_range %>
        <div id="avalanche">
          <%= render partial: "avalanche_infos", locals: {mountain_range: @mountain_range} %>
        </div>
      <% end %>
      <div id="itineraries">
      <% @itineraries.each do |itinerary| %>
        <% next if itinerary.name.nil? %>
        <%= render partial: "card_itinerary", locals: {itinerary: itinerary} %>
      <% end %>
      </div>
    </div>
  </div>
</div>
