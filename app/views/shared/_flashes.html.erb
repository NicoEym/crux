<% if notice %>
  <div class="row-no-margin-bottom" id="alert_box">
    <div class="col s12 m12">
      <div class="card alert-info alert-dismissible darken-1" style="margin: 0px">
        <div class="row row-no-padding-top" style="margin: 0px">
          <div class="col s12 m10 offset-m1">
            <div class="card-content white-text font-alert" style="text-align: center;">
              <%= notice %>
            </div>
          </div>
        <div class="col s12 m2">
          <i class="fa fa-times icon_style" id="alert_close" aria-hidden="true"></i>
        </div>
      </div>
     </div>
    </div>
  </div>
<% end %>

<% if alert %>
  <div class="row-no-margin-bottom" id="alert_box">
    <div class="col s12 m12">
      <div class="card alert-warning alert-dismissible darken-1" style="margin: 0px">
        <div class="row row-no-padding-top" style="margin: 0px">
          <div class="col s12 m10 offset-m1">
            <div class="card-content white-text font-alert" style="text-align: center;">
              <%= alert %>
            </div>
          </div>
        <div class="col s12 m2">
          <i class="fa fa-times icon_style" id="alert_close" aria-hidden="true"></i>
        </div>
      </div>
     </div>
    </div>
  </div>
<% end %>
