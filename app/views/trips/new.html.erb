<div class="banner banner-not-home" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('https://images.pexels.com/photos/414459/pexels-photo-414459.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
  <div class="banner-content text-center">

    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4 form-frame">
          <h4>Profil aventurier</h4>
          <% @user_activities.each do |user_activity| %>
            <div class="input-field col s12 m6">
              <%= simple_form_for user_activity, remote: true do |f| %>
              <%= f.input  :level, :collection => ["J'aime pas", "Padawan","Intermédiaire","Mutant"], label: user_activity.activity.name.capitalize, input_html: { class: user_activity.activity.name.split(" ")[0]} %>
              <%= f.hidden_field  :activity_id %>
              <% end %>
            </div>
          <% end %>
          <h4>Mon voyage</h4>
          <div class="input-field col s12 m12">
            <%= simple_form_for @trip do |f| %>
            <%= f.input  :location, input_html: { id: "trip_address", placeholder: "Adresse de départ" }, label: false %>
            <%= f.input  :start_date, as: :string, input_html: { class: 'datepicker', placeholder: "Date de début" }, label: false %>
            <%= f.input  :end_date, as: :string, input_html: { class: 'datepicker', placeholder: "Date de fin" }, label: false %>
            <div class="right-align"><%= f.submit "Let's go!", class: "waves-effect waves-light btn" %></div>
            <% end %>
          </div>
          <button id="test-transition" class="btn btn-lg btn-primary">test transition</button>
        </div>
      </div>
    </div>
  </div>
  </div>
   <div class="curtain">
    <div class="curtain-content text-center">
    <%= image_tag("boussole.png",class: "boussole") %>
    <ul class="list">
      <li class="transparent" id="row-iti">Analyse de <span id="itinerary-count"> <%= Itinerary.count %> </span> itinéraires...</li>
      <li class="transparent" id="row-basecamp">Analyse de <span id="basecamp-count"><%=  Basecamp.count %></span> camps de base...</li>
      <li class="transparent" id="row-massif">Analyse des données météos de <span id="massif-count"><%=  MountainRange.count %></span> massifs...</li>
    </ul>
    </div>

</div>
