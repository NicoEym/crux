<div class="container" >
  <div class ="row">
  <% @itineraries.each do |itinerary| %>

    <% next if itinerary.name.nil? %>

    <div class="col s12 m4">
      <div class="card small">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="<%= itinerary.picture_url %>">
        </div>
        <div class="card-content">
          <span class="title-card ellsipsised card-title activator grey-text text-darken-4"><%= itinerary.name.split("-")[0] %></span>
          <p>
            <span class="tertiary tooltipped" data-position="bottom" data-tooltip="Altitude max"><%= itinerary.elevation_max %>m</span>

            <% if itinerary.height_diff_up != nil%>
              <span class="tertiary tooltipped" data-position="bottom" data-tooltip="Orientation principale">+ <%= itinerary.height_diff_up %> m</span>
            <% end %>

            <span class="tertiary tooltipped" data-position="bottom" data-tooltip="DifficultÃ©"><%= itinerary.difficulty %></span>

            <% if itinerary.orientations != nil%>
              <span class="tertiary tooltipped" data-position="bottom" data-tooltip="Orientation principale"><%= itinerary.orientations.gsub("\"", "") %></span>
            <% end %>

           </p>
        </div>

        <% if itinerary.content != nil %>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= itinerary.name %><i class="material-icons right">close</i></span>
            <p><%= render partial: "description", locals: {itinerary: itinerary} %></p>
          </div>
        <% end %>

      </div>
    </div>
  <% end %>
  </div>
</div>


