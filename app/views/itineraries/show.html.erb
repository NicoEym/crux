<div class="container">
  <div class="row">
    <div class="col s12">
      <h2 class="header text-center"><%= @itinerary.name %></h2>
      <div class="card horizontal">
        <div class="card-image">
          <img src="<%= @itinerary.picture_url %>" class="cover">
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <%= render partial: "./itineraries/attributes", locals: {itinerary: @itinerary} %>
          </div>
          <div class="card-action">
            <a href="#">Ajouter aux favoris</a>
          </div>
        </div>
      </div>
    </div>

    <div class="col s12">
      <div class="card horizontal">
        <div class="card-stacked">
          <div class="card-content">
            <%= render partial: "./itineraries/description", locals: {itinerary: @itinerary} %>
          </div>
        </div>
      </div>
    </div>

    <div class="col s12">
      <div class="card horizontal">
        <div class="card-stacked">
          <div class="card-content">
            <div class="flex-object">
    <iframe src=<%= "https://fatmap.com/@#{@itinerary.coord_lat},#{@itinerary.coord_long},#{@itinerary.elevation_max},-35.9049826,92.6848191,2388.9221056,normal" %> frameborder="" allowfullscreen="" width="100%" height="600"></iframe>
  </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
