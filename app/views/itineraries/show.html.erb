<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card horizontal">
        <div class="card-image">
          <img src="<%= @itinerary.picture_url %>" class="cover">
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <span class="title-card card-title activator grey-text text-darken-4"><%= @itinerary.name%></span>
              <span class="tertiary tooltipped" data-position="bottom" data-tooltip="Altitude max"><%= @itinerary.elevation_max %>m</span>
              <span class="tertiary tooltipped" data-position="bottom" data-tooltip="Difficulté"><%= @itinerary.difficulty %></span>
              <% if @itinerary.orientations != nil%>
                <span class="tertiary tooltipped" data-position="bottom" data-tooltip="Orientation principale"><%= @itinerary.orientations.gsub("\"", "") %></span>
                <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12">
      <div class="card horizontal">
        <div class="card-stacked">
          <div class="card-content">
            <%= render partial: "./itineraries/description", locals: {itinerary: @itinerary} %>
          </div>
        </div>
      </div>
    </div>

    <div class="col s12">
      <div class="card horizontal">
        <div class="card-stacked">
          <div class="card-content">

            <% if @itinerary.recent_conditions.nil? %>
              <h5>Pas de sorties récentes</h5>
            <% else %>
              <h5>Sorties récentes:</h5>
              <ul>
                <% @itinerary.recent_conditions.each do |id| %>
                <li><a href="<%= "https://www.camptocamp.org/outings/#{id[0]}" %>" target="blank">Sortie le <%= id[1] %></a> sur CamptoCamp</li>
                <% end %>
              </ul>
            <% end %>

          </div>
        </div>
      </div>
    </div>

    <div class="col s12">
      <div class="flex-object">
        <iframe src=<%= "https://fatmap.com/@#{@itinerary.coord_lat},#{@itinerary.coord_long},#{@itinerary.elevation_max},-35.9049826,92.6848191,2388.9221056,normal" %> frameborder="" allowfullscreen="" width="100%" height="600"></iframe>
      </div>


    </div>
  </div>
</div>
